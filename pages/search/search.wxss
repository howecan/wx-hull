/* pages/search/search.wxss */
.search-input{
  flex:1;
  color:#4a4a4a;
  font-size: 28rpx;
}
.search-cancel{
  color:#9e9e9e;
  width:60rpx;
  height:48rpx;
  line-height: 48rpx;
  text-align: center;
  font-size: 26rpx;
}
.search-list{
  background: #fff;

}
.movie-wrapper{
  padding:0 30rpx;
  border-bottom:1px solid #9e9e9e;
  box-sizing:border-box;
}
.movie-content{
display:flex;
flex-direction:row;
align-items:center;
margin:15rpx 0;
}
.movie-content .poster{
  width:80rpx;
  height:100rpx;
}
.movie-content .total{
   width:100%;
   margin-left:20rpx;
   display:flex;
   flex-direction:column;
}
.movie-content .total .name{
  width:100%;
  font-size:32rpx;
  color:#4a4a4a;
  font-weight: 600;
}

.movie-content .total .desc{
  width:100%;
  font-size:28rpx;
  color:#9e9e9e;
}