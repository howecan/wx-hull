/* pages/movie-detail/movie-detail.wxss */
@import "/pages/movie-list/movie-list.wxss";
@import "../../wxParse/wxParse.wxss";
.container {
justify-content: flex-start;
}
.session-wrap{
  width:100%;
  padding:30rpx;
  box-sizing: border-box;
  
}
.session-content{
  width:100%;
  margin-bottom:50rpx;
  padding:0rpx;
}
.movie-summary{
  width:100%;
  float: left;
  line-height: 1.6;
  padding:20rpx 0rpx ;
  box-sizing: border-box;
}
.title,.title2{
  width:100%;
  font-size: 50rpx;
  color:black;
  font-weight: 400;
  line-height: 1.5em;
  
  box-sizing: border-box;
}
.title2{
  padding:30rpx;
font-size: 40rpx;
margin-top: 20rpx;
color:#009999;
}
.writer,.pubdate,.typename{
  float: left;
  width: 25%;
  font-size: 24rpx;
  color:#9e9e9e;
  white-space: nowrap;
  display:block;
}
.typename{
float: right;
text-align: right;
color:cornflowerblue;
}
.session-ad{
  height:400rpx;
}
.poster,.btn-area{
   width:100%;
}
.btn-area button{ 
   margin-bottom:50rpx;
   background-color:#008e9c;
   color:#fff;
   width:90%;
  
}
.btn-area text{
  padding:0 30rpx;
}