/* pages/movie-reviews/movie-reviews.wxss */
@import "/pages/movie-rating/movie-rating.wxss";
.container{
  width:100%;
}
.session{
  width:100%;
  padding:10rpx 30rpx;
  box-sizing: border-box;
  
}
.name,.review-title{
  display: block;
  width:100%;
  font-size: 32rpx;
  color:#000;
  line-height: 1.5;
}

.review-wrapper{
  border-bottom: 1px solid #ececec;
  padding: 30rpx 0;
  font-size: 24rpx;
}
.review-content{
  display:flex;
  padding:10rpx 30rpx;
}
.review-content .image{
  width:48px;
  height:48px;
  display: block;
  margin:10rpx 20rpx 0 0;
}
.review-author{
   height:48px;
   flex-grow:2;
}
.name{
   font-size: 24rpx;
   font-weight: bold;
}
.creattime{
   width: 100%;
   float: left;
   color:#9e9e9e;
}
.signature{
  width: 100%;
  float: left;
  color:#9e9e9e;
  white-space: nowrap;
}
.desc-content{
  width:100%;
  font-size: 24rpx;
  color:#666;
  line-height: 1.8;
}
.desc-all{
  font-size: 28rpx;
}

.review-title{
 font-size: 32rpx;
 padding-bottom: 20rpx;
}
.wish-session{
 display:flex;
justify-content: space-around;

}
.extension{
  display: inline-block;
  
  color:#cc9900;
}
.wish-btn{
  font-size: 20rpx;
  line-height: 40rpx;
  margin:10rpx 0;
  width:150rpx;
  height:40rpx;
  text-align: center;
  color:#cc9900;
  border:1rpx solid #cc9900;
  border-radius: 10rpx;
}