/* pages/movie-list/movie-list.wxss */

.movie-wrapper{
  padding:30rpx;
  width:100%;
  box-sizing: border-box;
  border-bottom:2rpx solid #e6e6e6;
}
.movie-content{
  display:flex;
  flex-direction: row;
}
.movie-content .poster{
  width:180rpx;
  height:180rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.movie-content .poster img{
  width:auto;
  height:180rpx;
  
}
.movie-content .movie-desc{
  width:480rpx;
  display: flex;
  flex-direction: column;
  margin:0 0 0 20rpx;
  position: relative;
}
.movie-desc-name{
  height: 3em;
  line-height: 1.1em;
}
.movie-content .name{
  font-weight: 600;
  color:#000;
  font-size: 30rpx;
  
}
.movie-content .directors,.casts {
  font-size: 26rpx;
  color:#666;
  font-weight: 500;
  white-space: nowrap;
  text-overflow:hiden;
  overflow: hidden;
  line-height: 1em;
  position:absolute;
}
.casts{
left:0;
bottom:0;
width:30%;
}
.directors{
  right:0;
  bottom:0;
  width:70%;
}